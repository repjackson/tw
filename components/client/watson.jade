template(name='doc_sentiment') 
    .ui.dividing.header 
        img.ui.avatar.image(src="https://png.icons8.com/attitude/color/48" width="48" height="48")
        |Sentiment
    .ui.tiny.progress(data-percent=sentiment_score_percent class=sentiment_bar_class)
        .bar
        .progress
        .label
            if is_positive
                |Positive
            else
                |Negative

        // |#{doc_sentiment_label}
        // |#{sentiment_score_percent}

template(name='watson_keywords') 
    .ui.dividing.header 
        img.ui.avatar.image(src="https://png.icons8.com/dna-helix/color/48" width="48" height="48")
        |Analyzed Keywords
    each watson_keywords
        .ui.basic.label #{this}

template(name='doc_emotion') 
    .ui.dividing.header 
        img.ui.avatar.image(src="https://png.icons8.com/mind/color/48" width="48" height="48")
        |Emotion
    with watson.emotion.document.emotion
        .ui.blue.tiny.progress(data-percent=sadness_percent)
            .bar
            .progress
            .label Sadness
        .ui.green.tiny.progress(data-percent=joy_percent)
            .bar
            .progress
            .label Joy
        .ui.black.tiny.progress(data-percent=fear_percent)
            .bar
            .progress
            .label Fear
        .ui.yellow.tiny.progress(data-percent=disgust_percent)
            .bar
            .progress
            .label Disgust
        .ui.red.tiny.progress(data-percent=anger_percent)
            .bar
            .progress
            .label Anger
            
template(name='call_watson')
    #call_watson.ui.basic.fluid.button 
        // i.calculator.icon
        img.ui.avatar.image(src="https://png.icons8.com/dna-helix/color/48" width="48" height="48")
        |Analyze Text

template(name='analyzed_watson_keywords')
    .ui.fluid.styled.accordion
        .title
            img.ui.avatar.image(src="https://png.icons8.com/dna-helix/color/48" width="48" height="48")
            |Analyzed Keywords (#{watson.keywords.length})
            i.dropdown.icon
        .content
            .ui.three.stackable.cards
                each watson.keywords
                    .ui.card
                        .content
                            .header 
                                img.ui.avatar.image(src="https://png.icons8.com/tag/color/48" width="48" height="48")
                                |#{text}
                            // .meta
                            //     |Relevance: #{relevance}
                                // |Sentiment: #{sentiment.score}
                            .description
                                with emotion
                                    .ui.list
                                        // .item Sadness: #{sadness}
                                        // .item Joy: #{joy}
                                        // .item Fear: #{fear}
                                        // .item Disgust: #{disgust}
                                        // .item Anger: #{anger}       
                                        .ui.blue.tiny.progress(data-percent=sadness_percent)
                                            .bar
                                            .progress
                                            .label Sadness
                                        .ui.green.tiny.progress(data-percent=joy_percent)
                                            .bar
                                            .progress
                                            .label Joy
                                        .ui.black.tiny.progress(data-percent=fear_percent)
                                            .bar
                                            .progress
                                            .label Fear
                                        .ui.yellow.tiny.progress(data-percent=disgust_percent)
                                            .bar
                                            .progress
                                            .label Disgust
                                        .ui.red.tiny.progress(data-percent=anger_percent)
                                            .bar
                                            .progress
                                            .label Anger
