template(name='cart')
    .ui.text.container
        |{{> ensureSignedIn template="cart_checkout"}}


template(name='cart_checkout')
    .ui.ordered.steps
        .active.step
            .content
                .title Checkout
        .step
            .content
                .title Profile Information
    h2.ui.header Confirm Order
    with cart_item
        .ui.segment
            .ui.centered.grid
                .three.wide.column
                    img.ui.fluid.image(src="{{c.url image_id }}")
                .six.wide.column
                    h2.ui.header #{title}
                    // .meta
                    //     if price
                    //         span $#{price}
                    //     else
                    //         .ui.basic.green.label Free
                    .description #{subtitle}
                .seven.wide.column
                    a.buy_course.ui.teal.big.button
                        |Buy #{title} for $#{price}
        .ui.hidden.divider


template(name='cart_profile')
    .ui.text.container
        .ui.ordered.steps
            .completed.step
                .content
                    .title Checkout
            .active.step
                .content
                    .title Profile Information
    +edit_profile

