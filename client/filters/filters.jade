
template(name='tag_filter')
    .ui.dividing.header Browse Tags
    .ui.left.icon.small.input
        i.search.icon
        +inputAutocomplete settings=settings id="search" class="" autocomplete="off" placeholder='Search...'
    if selected_tags
        // .ui.dividing.header Selected Tags
        #clear_tags.ui.teal.icon.circular.button
            i.remove.icon
        each selected_tags
            .unselect_tag.ui.teal.circular.button
                strong #{this}
    // .ui.hidden.fitted.divider
    each tags
        .ui.basic.circular.button.select_tag(class=cloud_tag_class) 
            | #{this.name}
            // if isInRole 'admin'
            //     small #{this.count}

