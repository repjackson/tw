template(name='facet')
    .ui.container
        .ui.header Courses
        +doc_content tags='courses,page,blurb'
        
        +doc_content tags='course,sol,logo'
    
        +doc_body tags='sol,subtitle' classes='ui center aligned header'

    
template(name='doc_content')
    if doc
        with doc
            if editing
                +edit_content
            else
                span(class=doc_classes)
                    |!{content}
            if isInRole 'admin'
                unless editing
                    i.edit_this.large.pencil.link.icon(title=tags)
                else
                    .save_doc.ui.icon.green.basic.button
                        i.check.icon
    else
        if isInRole 'admin'
            .ui.header No Doc Found
            .create_doc.ui.basic.button
                i.plus.icon
                |Create HTML with #{template_tags}
            
template(name='doc_body')
    if doc
        with doc
            if editing
                +edit_body
            else
                span(class=doc_classes)
                    |#{body}
            if isInRole 'admin'
                unless editing
                    i.edit_this.large.pencil.link.icon(title=tags)
                else
                    .save_doc.ui.icon.green.basic.button
                        i.check.icon
    else
        if isInRole 'admin'
            .ui.header No Doc Found
            .create_doc.ui.basic.button
                i.plus.icon
                |Create Plain with #{template_tags}
            
template(name='edit_content')
    .ui.segment
        .ui.form
            .field
                each tags
                    .ui.basic.label #{this}
            .field
                // label Content
                .froala-container
                    +froalaReactive edit_doc_context


template(name='edit_body')
    .ui.segment
        .ui.form
            .field
                each tags
                    .ui.basic.label #{this}
            .field
                // label Body
                input#body(type='text' value=body)
                
template(name='thing')
    if is_editing
        .ui.form
            .field
                input#body(type='text' value=body)
            +session_edit_button
            +delete_button
    else
        h4 #{body}
        if isInRole 'admin'
            +session_edit_button
