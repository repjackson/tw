template(name='checkin_cloud')
    #cloud
        .ui.icon.fluid.input
            input#quick_add(type='text' placeholder='Quick Add with Tags')
            i.green.plus.icon
        .ui.hidden.divider
        .ui.header Filter Checkin by Tag
        // .ui.left.icon.large.input
        //     i.search.icon
        //     +inputAutocomplete settings=settings id="search" class="" autocomplete="off" 
        if selected_tags
            #clear_tags.ui.teal.icon.large.circular.button
                i.remove.icon
            each selected_tags
                .unselect_tag.ui.teal.large.circular.button
                    strong #{this}
        // .ui.hidden.divider
        // .ui.circular.large.button.select_tag(class=media_tag_class) Tori Webster
        each checkin_tags
            .ui.circular.basic.button.select_tag(class=cloud_tag_class) 
                strong #{this.name}
