a.ui.basic.button(href='/services')
    i.left.chevron.icon
    |Transactions
with doc
    .ui.container
        h1.ui.center.aligned.header View Transaction
        .ui.stackable.grid
            .ten.wide.column
                .ui.segment
                    .ui.header Child Document
            .five.wide.column
                .ui.header #{when}
                if sale_dollar_price
                    |$#{sale_dollar_price}
                |#{sale_point_price} point(s)
                div
                    if completed
                        i.large.green.check.icon
                    else    
                        i.large.circle.outline.icon
                div
                    if reviewed
                        i.large.green.check.icon
                    else    
                        i.large.circle.outline.icon

                .ui.header buyer 
                    img.ui.avatar.image(src="{{c.url author.profile.image_id width=100 height=100 gravity='face' crop='fill'}}")
                    |#{author.name}
                    with author
                        +staus_indicator
                .ui.header recipient
                    img.ui.avatar.image(src="{{c.url recipient.profile.image_id width=100 height=100 gravity='face' crop='fill'}}")
                    |#{recipient.name}
                    with recipient
                        +staus_indicator

                .ui.dividing.header Actions
                .ui.basic.button Review
                .ui.basic.button Mark Completed