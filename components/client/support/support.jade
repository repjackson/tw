template(name='support')
    .ui.container
        .ui.center.aligned.header Support
        p
            |If you're having with issues on the site feel free to start a ticket and our support team will get back to you shortly.  Thanks!
        .ui.form
            .field
                label Description
                textarea#ticket_body(rows='2')
            #submit_ticket.ui.green.button Submit
            
        if my_tickets
            .ui.dividing.header Your Tickets
            .ui.basic.segment
                .ui.comments
                    each my_tickets
                        +ticket
                    
template(name='ticket')                    
    .ui.comment
        .content
            a.author #{author.username}
            .metatdata 
                span.date #{when}
            .text #{body}
            .actions
                // a.reply Reply
                // if is_read
                //     a.mark_unread Mark Unread
                // else    
                //     a.mark_read Mark Read
                +delete_link