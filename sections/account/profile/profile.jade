template(name='profile_about')
    with person
        h1.ui.center.aligned.header 
            img(src="https://png.icons8.com/info/color/96" width="96" height="96")
            |About
        .ui.hidden.divider
        .ui.two.column.stackable.grid
            .column
                if tags
                    img.ui.avatar.image(src="https://png.icons8.com/hashtag/color/48" width="48" height="48")
                    each tags
                        .user_tag.ui.circular.large.basic.label #{this}
                // +toggle_friend
                // .ui.hidden.divider
                if profile.location
                    .ui.header 
                        img.ui.avatar.image(src="https://png.icons8.com/user-location/color/48" width="48" height="48")
                        | #{profile.location}
                if profile.about_me
                    .ui.header About Me
                    |#{profile.about_me}
            .column
                .ui.header My True Colors Are:
                +color_dots
                // if points
                //     .ui.small.teal.statistic
                //         .value #{points}
                //         .label Comment Karma
                // if isInRole 'dev'
                //     +tag_person this    
                if profile.if_knew_me
                    .ui.header If you really knew me you would know…
                    |#{profile.if_knew_me}
                if profile.if_not_working
                    .ui.header If I am not at work or in class then I am probably…
                    |#{profile.if_not_working}

        
        
