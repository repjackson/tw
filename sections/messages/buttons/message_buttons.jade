template(name='message_reply_button')
    .reply_to_message.ui.basic.button 
        i.reply.icon
        |Reply
        
        
template(name='read_link')
    if read
        a.mark_unread 
            i.open.envelope.outline.icon
            |Mark Unread
    else
        a.mark_read 
            i.mail.outline.icon
            |Mark Read

template(name='archive_link')
    if archived
        a.unarchive 
            i.inbox.icon
            |Unarchive
    else
        a.archive 
            i.archive.icon
            |Archive


template(name='delete_message_button')
    #delete_message.ui.red.icon.button
        i.remove.icon
        
template(name='delete_message_link')
    a#delete_message
        i.trash.link.icon
        |Delete