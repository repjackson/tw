template(name='dashboard')
    .ui.container
        .ui.stackable.centered.five.column.grid
            .column
                a.ui.icon.center.aligned.header(href='/people')
                    i.icon
                        +icon96 name='meeting'
                    |Community
            .column    
                a.ui.icon.center.aligned.header(href='/conversations')
                    i.icon
                        +icon96 name='chat'
                    |Conversations
            .column    
                a.ui.icon.center.aligned.header(href='/bugs')
                    i.icon
                        +icon96 name='bug'
                    | Bugs
            .column    
                a.ui.icon.center.aligned.header(href='/lightbank' class="{{isActivePath '/lightbank'}}" data-position="bottom center" data-content="Lightbank") 
                    i.icon
                        +icon96 name='summer'
                    |Lightbank
            .column    
                a.ui.icon.center.aligned.header(href='/journal') 
                    i.icon
                        +icon96 name='journal'
                    |Journal
            .column    
                a.ui.icon.center.aligned.header(href='/checkin' data-position="bottom center" data-content="Check In") 
                    i.icon
                        +icon96 name='sprout'
                    |Check In
            if isInRole 'admin'
                .column    
                    a.ui.icon.center.aligned.header(href='/admin' data-position="bottom center" data-content="Admin") 
                        i.icon
                            +icon96 name='fairytale'
                        |Admin
            .column    
                a.ui.icon.center.aligned.header(href="/profile/#{currentUser.username}/account")
                    i.icon
                        +icon96 name='settings'
                    |Settings
            .column    
                a#logout.ui.icon.center.aligned.header(href='#')
                    i.icon
                        +icon96 name='burglary'
                    | Sign Out