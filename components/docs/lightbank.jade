template(name='lightbank')
    .ui.container
        +cloud
        each docs
            +doc_view
        


template(name='doc_view')
    .ui.container.fluid.center.aligned.segment
        |!{content}
        .meta
            each tags
                .ui.circular.tiny.button.tag(class=tag_class) #{this}
        if can_edit
            .edit.ui.circular.basic.large.button
                i.red.configure.icon
                |Edit
