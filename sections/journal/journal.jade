template(name='journal_doc_view')
    .ui.item(class=journal_card_class)
        .content
            .description
                .ui.basic.segment
                    |!{content}
                +parent_doc_segment
            .description
                span.right.floated
                    if published
                        i.unlock.blue.icon
                        |Published
                    else
                        i.lock.icon
                        |Private
                if author.profile.image_id
                    img.ui.avatar.image(src="{{c.url author.profile.image_id width=50 height=50 gravity='face' crop='fill'}}")
                |#{author.name} #{when}
                with author
                    +staus_indicator
            .meta
                i.hashtag.icon
                each tags
                    .ui.tiny.circular.compact.button.tag(class=tag_class) #{this}
            .meta
                i.marker.icon
                each location_tags
                    .ui.tiny.circular.compact.button.tag(class=location_tag_class) #{this}
            .meta
                i.checkmar.box.icon
                each intention_tags
                    .ui.tiny.circular.compact.button.tag(class=intention_tag_class) #{this}
            // .meta
            //     i.large.icons
