template(name='leaderboard')
    .ui.header 
        +icon48 name='leaderboard'
        | Point Leaderboard
    .ui.list
        each players
            .item
                .content
                    .header
                        img.ui.avatar.image(src="{{c.url profile.image_id width=100 height=100 gravity='face' crop='fill'}}")
                        |#{name}
                    .description
                        |Points: #{points}
    
    
template(name='journal_stats')
    .ui.header 
        +icon48 name='leaderboard'
        | Journal Stats
    .ui.list
        each journal_authors
            +journal_stat
template(name='journal_stat')        
    .item
        .content
            .header
                img.ui.avatar.image(src="{{c.url profile.image_id width=100 height=100 gravity='face' crop='fill'}}")
                |#{name}
            .description
                |Points: #{points}
