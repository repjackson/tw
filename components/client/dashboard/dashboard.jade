                                i.exchange.icon
                                |Transactions
                    a.ui.card(href='/support')
                        .content
                            .header
                                i.help.icon
                                |Support
                    a.ui.card(href='/messages')
                        .content
                            .header
                                i.mail.icon
                                |Messages
