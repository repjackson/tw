template(name='person')
    .ui.card
        .image
            a(href="/user/#{username}")
                img.ui.fluid.rounded.image(src="{{c.url profile.image_id width=400 height=400 gravity='face' crop='fill'}}")
        .content
            .center.aligned.header
                a(href="/user/#{username}")
                    if profile.first_name
                        | #{profile.first_name}
                    if profile.last_name
                        | #{profile.last_name}
                    else    
                        | #{username}
                    +staus_indicator
            if profile.location
                .center.aligned.meta
                    | #{profile.location}
            .center.aligned.meta
                +color_dots
