.ui.dividing.header About Author
with person
    .ui.items
        .item
            .image
                // a(href="/profile/view/#{_id}")
                img(src="{{c.url profile.image_id width=300 height=300 gravity='face' crop='fill'}}")
            .content
                .header
                    a(href="/profile/view/#{_id}") #{name}
                .meta
                    |#{points} karma
                .meta
                    | #{profile.position} at #{profile.company}
                .description
                    p #{pro_bio}
                .extra
                    each tags
                        .ui.tiny.compact.basic.label #{this}
