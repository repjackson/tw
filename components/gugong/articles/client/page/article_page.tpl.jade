with article
    .ui.container
        a.ui.top.left.attached.basic.button(href="/articles")
            i.arrow.left.icon
            |Articles
        if image_id
            img.ui.centered.image(src="{{c.url image_id height=500 width=800 background='white' crop='lpad'}}")
        h1.ui.header #{title}
        .ui.stackable.divided.grid
            .twelve.wide.column
                .content
                    if publish_date
                        h4.ui.header Published #{publish_when}
                    .ui.basic.segment
                        |!{body}
                +user_blurb
                +comments
            .four.wide.column
                .ui.dividing.header Article Tags
                each tags
                    .ui.basic.label #{this}
                if isInRole 'admin'
                    .ui.dividing.header 
                        i.large.red.configure.icon
                        |Admin
                    .edit_article.ui.basic.button
                        i.pencil.icon
                        |Edit Article
                    if published
                        .ui.green.label Published
                    else
                        .ui.red.label Unpublished                        
                .ui.dividing.header Actions
                +voting
                +favorite
                +tag_rating