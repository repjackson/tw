    .ui.horizontal.divider.header
        i.red.configure.icon
        |Member sol_section Progress
    .ui.list    
        each user_sol_section_progress_docs
            .item
                .header #{author.name}
                // .content
                //     +edit_parent_id
                .content
                    .ui.indicating.tiny.progress(data-percent=percent_complete)
                        .bar
                        .label
