template(name='journal_prompts')
    .ui.container
        h1.ui.center.aligned.header
            img.ui.image(src="https://png.icons8.com/ask-question/color/48" width="48" height="48")
            | Journal Prompts
        // .ui.center.aligned.basic.segment
        //     +doc_content tags='journal,prompt,blurb'
        // #convert_journal_docs.ui.button Convert Journal Docs
        .ui.stackable.grid
            .four.wide.column
                #cloud
                    +theme_facet type='journal'
            .nine.wide.column
                .ui.relaxed.divided.items
                    each journal_prompts
                        +journal_prompt
            .three.wide.column
                .ui.header 
                    +icon24 name='filter' classes='ui avatar image'
                    |Filter

                +bookmark_filter



template(name='journal_prompt')
    .ui.segment(class=journal_card_class)
        .content
            .description
                .ui.basic.segment.large
                    |!{content}
