template(name='grid_item')
    if editing
        .ui.fluid.card
            +title
            +type
            +icon_class
            +number
            +edit_parent_id
            +delete_button
    else
        .column
            a.ui.icon.center.aligned.header(href="/view/#{_id}") 
                i.icon
                    if responded
                        +icon96 name='checked'
                    else
                        if icon_class
                            +icon96 name=icon_class
                        else
                            +icon96 name='circle'
                if number
                    |#{number}: 
                |#{title}
                if body
                    .ui.basic.label #{body}
                if isInRole 'dev'
                    .ui.basic.label #{type}    