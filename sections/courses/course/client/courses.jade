template(name='courses')
    .ui.hidden.divider
    .ui.text.container
        h1.ui.center.aligned.header 
            +icon96 name='classroom'
            |Courses
        +doc_content tags='courses,page,blurb' classes='ui center aligned header'
        // .ui.two.item.teal.menu
        //     a#set_mode_to_all.item(class=all_item_class) All
        //     a#set_mode_to_mine.item(class=mine_item_class) My Courses
        .ui.hidden.divider
        .ui.divided.items
            .item
                .image
                    a(href="/course/sol") 
                        +doc_image tags='course,sol'
                        // img.ui.image(src="{{c.url 'sol' }}")
                .content
                    a.header(href="/course/sol") 
                        +doc_title tags='course,sol' classes='header'    
                        // +doc_subtitle tags='course,sol'
                        // if in_course
                        //     .ui.basic.green.label Enrolled
                    .description
                        +doc_subtitle tags='course,sol'
                    a.ui.right.floated.basic.large.button(href="/course/sol") 
                        |View
                        +icon48 name='chevron-right' classes='ui mini inline image'
        if isInRole 'admin'
            +dividing_header label='Admin' icon='monarch'
            .ui.divided.items
                each courses
                    +course
template(name='course')
    .item
        .image
            a(href="/view/#{_id}") 
                img(src=img_url)
                // img.ui.image(src="{{c.url 'sol' }}")
        .content
            a.header(href="/view/#{_id}") #{title}
            .description
                |#{subtitle}
            +view_full_button
