template(name='stats')
    .ui.stackable.grid
        .centered.row
            .four.wide.column
                h2.ui.header
                    +icon48 name='diamond' classes='ui inline image'
                    |#{currentUser.points}
            .eight.wide.column
                h1.ui.center.aligned.header 
                    +icon96 name='combo-chart'
                    | Stats
            .four.wide.column
                a.ui.basic.circular.small.button(href='/services') 
                    +icon48 name='service-bell' classes='ui mini spaced image'
                    | Services
                    +icon48 name='rotate-left' classes='ui mini spaced image'
