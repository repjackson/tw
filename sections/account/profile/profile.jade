        .ui.bottom.attached.basic.segment.pushable
            +left_sidebar
            .pusher
                #main_area
                    .ui.basic.fluid.segment
                        .ui.basic.segment.container
                            // .ui.breadcrumb
                            //     a.section(href='/') Home
