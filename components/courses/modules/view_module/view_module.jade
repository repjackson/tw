template(name='view_module')
    +nav
    .ui.container
        .ui.breadcrumb
            a.section(href='/') Home
            .divider  / 
            a.section(href='/courses') Courses
            .divider  / 
            a.section(href="/course/#{course._id}") #{course.title}
            .divider  / 
            a.section(href="/course/#{course._id}/modules") Modules
            .divider  / 
            .active.section #{module.number}: #{module.title}
        h1.ui.center.aligned.header #{module.number}: #{module.title}
        .ui.stackable.grid
            .four.wide.column
                with module
                    .content
                        |!{description}
                    .ui.vertical.fluid.pointing.menu
                        a.item(href="/course/#{course_id}/module/#{_id}/sections" class="{{isActiveRoute name='module_sections'}}") Sections
                        a.item(href="/course/#{course_id}/module/#{_id}/downloads" class="{{isActiveRoute name='module_downloads'}}") Downloads
                        a.disabled.item Light Work
                    .ui.dividing.header Status
                    if complete
                        .ui.teal.fluid.label 
                            i.check.icon
                            |Complete
                    else
                        .ui.teal.basic.fluid.label 
                            |Incomplete
                    if isInRole 'admin'
                        .ui.dividing.header 
                            |Admin
                        a.ui.fluid.basic.button(href="/course/#{course_id}/module/#{_id}/edit")
                            i.red.configure.icon
                            |Edit Module
            .twelve.wide.column
                +Template.dynamic template=module_content

template(name='module_sections')
    #section_menu.ui.top.attached.tabular.menu
        each sections
            a.item(data-tab="tab#{number}") Section #{number}
    each sections
        .ui.bottom.attached.tab.segment(data-tab='tab#{number}')
            .ui.header Section #{number}
            +view_section


template(name='view_section')
    .ui.basic.segment
        .ui.header Section Content
        |!{section_content}
        .ui.header Transcript
        |!{transcript}
        +view_questions
        
