template(name='child_docs')
    .ui.header
        img.ui.avatar.image(src="https://png.icons8.com/flow-chart/color/48" width="48" height="48")
        |Child Documents
    .ui.cards
        each child_docs
            .card
                .content
                    .header
                        if title
                            |#{title}
                    .description
                        .meta
                            each tags
                                .ui.basic.label #{this}
                        |!{content}
                .content
                    +author_info
                    |#{when}