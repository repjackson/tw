    .right.mobile.hidden.menu
        if currentUser
            if cart_items
                a.icon.item(href='/cart' class="{{isActivePath '/cart'}}" data-content="Shopping Cart")
                    i.large.icons
                        i.cart.icon
                        i.corner.teal.asterisk.icon
            if isInRole 'admin'
                a.icon.item(href='/admin/members' class="{{isActivePath '/admin/members'}}")
                    i.configure.red.icon
                    // | Admin
            a.icon.item(href='/messages' class="{{isActiveRoute name='message_layout'}}" data-content="Messages")
                if unread_message_count
                    i.mail.blue.icon
                else
                    i.mail.outline.icon
                // | Admin
            a.ui.icon.dropdown.item(class="{{isActivePath '/notifications'}}" data-content="Notifications")
                if unread_notifications_count
                    i.alarm.blue.icon
                else
                    i.alarm.outline.icon
                .ui.menu(style="right: 0;left: auto;")
                    a.item(href='/notifications') View All
                    .ui.divider
                    each unread_notifications
                        .item #{subject.name} #{predicate} #{object.name}

            a.icon.item(href='/bookmarks' class="{{isActivePath '/bookmarks'}}" data-content="Bookmarks")
                i.bookmark.outline.icon
                // .ui.menu
                //     each bookmark_docs
                //         each tags
                //             .ui.tiny.basic.label #{this}
            a.ui.dropdown.item
                if currentUser.profile.image_id
                    img.ui.avatar.image(src="{{c.url currentUser.profile.image_id width=50 height=50 gravity='face' crop='fill'}}")
                else
                    i.user.icon
                if currentUser.name
                    | #{currentUser.name}
                else
                    | #{currentUser.username}
                i.dropdown.icon
                .ui.menu
                    a.item(href="/dashboard" class="{{isActivePath '/dashboard'}}")
                        i.dashboard.icon
                        |Dashboard
                    .ui.divider
                    a.icon.item(href='/karma' class="{{isActivePath '/karma'}}")
                        i.heartbeat.outline.icon
                        | Karma
                    a.item(href='/courses' class="{{isActivePath '/courses'}}") 
                        i.university.icon
                        |My Courses
                    a.item(href='/people' class="{{isActivePath '/people'}}") 
                        i.users.icon
                        | People
                    a.item(href='/bookmarks' class="{{isActivePath '/bookmarks'}}")
                        i.bookmark.outline.icon
                        |Bookmarks
                        // .ui.menu
                        //     each bookmark_docs
                        //         each tags
                        //             .ui.tiny.basic.label #{this}
                    a.item(href="/profile/#{currentUser.username}" class="{{isActiveRoute name='view_profile'}}")
                        i.user.icon
                        | Profile
                    a.icon.item(href='/account/' class="{{isActivePath '/account/'}}")
                        i.settings.icon
                        | Settings
                    if isInRole 'admin'
                        .ui.divider
                        a.mobile.hidden.item(href='/services' class="{{isActivePath '/services'}}") 
                            i.paint.brush.icon
                            |Services
                        a.icon.item(href='/admin/dashboard' class="{{isActivePath '/admin/dashboard'}}")
                            i.configure.red.icon
                            | Admin
                    .ui.divider
                    a#logout.ui.item
                        i.sign.out.icon
                        | Sign Out
        else
            a.ui.item(href='/sign-in') 
                i.sign.in.icon
                | Sign In
