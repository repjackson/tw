template(name='following')
    .ui.dividing.header Following
    if is_following
        #unfollow.ui.teal.button Unfollow #{name}
    else
        #follow.ui.teal.button Follow #{name}
    .ui.dividing.header List of Users Following #{name}
    .ui.divided.list
        each followers
            .item
                .image
                    a(href="/profile/#{username}")
                        img.ui.avatar.image(src="{{c.url profile.image_id width=50 height=50 gravity='face' crop='fill'}}")
                .content
                    a.header(href="/profile/#{username}")
                        if profile.name 
                            |#{profile.name}
                            // |#{profile.first_name} #{profile.last_name}
                        else
                            |#{username}
                    // .description
                    //     each five_tags
                    //         .ui.tiny.basic.label #{this}
                    +color_dots
                    .description
                        // // +staus_indicator
                        // |last seen #{last_login}
                                
                            
    .ui.dividing.header List of Users Followed by #{name}
    .ui.divided.list
        each following
            .item
                .image
                    a(href="/profile/#{username}")
                        img.ui.avatar.image(src="{{c.url profile.image_id width=50 height=50 gravity='face' crop='fill'}}")
                .content
                    a.header(href="/profile/#{username}")
                        if profile.name 
                            |#{profile.name}
                            // |#{profile.first_name} #{profile.last_name}
                        else
                            |#{username}
                    // .description
                    //     each five_tags
