template(name='view_module')
    .ui.container
        .ui.breadcrumb
            a.section(href='/') Home
            .divider  / 
            a.section(href='/courses') Courses
            .divider  / 
            a.section(href="/course/#{course._id}") #{course.title}
            .divider  / 
            a.section(href="/course/#{course._id}/modules") Modules
            .divider  / 
            .active.section #{module.number}: #{module.title}
        with module
            h1.ui.center.aligned.header #{number}: #{title}
            .ui.stackable.grid
                .four.wide.column
                    .content
                        |!{description}
                    .ui.vertical.fluid.pointing.menu
                        with module
                            a.disabled.item Sections
                            a.disabled.item Light Work
                    if complete
                        .ui.teal.fluid.label 
                            i.check.icon
                            |Complete
                    else
                        .ui.teal.basic.fluid.label 
                            |Incomplete
                    .ui.horizontal.divider.header Status
                    if isInRole 'admin'
                        .ui.horizontal.divider.header 
                            |Admin
                        a.ui.fluid.basic.button(href="/course/#{course_id}/module/#{_id}/edit")
                            i.red.configure.icon
                            |Edit Module
    
                .twelve.wide.column
                    #section_menu.ui.top.attached.tabular.menu
                        each sections
                            a.item(data-tab="tab#{number}") Section #{number}
                    each sections
                        .ui.bottom.attached.tab.segment(data-tab='tab#{number}')
                            .ui.header Section #{number}
                            +view_section


template(name='view_section')
    .ui.basic.segment
        .ui.header Section Content
        |!{section_content}
        .ui.header Transcript
        |!{transcript}
        +view_questions
        
template(name='view_questions')        
    .ui.header Section Questions
    #question_menu.ui.top.attached.tabular.menu
        a.item(data-tab="my_answers") My Answers
        each questions
            a.item(data-tab="question#{_id}") Question #{number}
    .ui.bottom.attached.tab.segment(data-tab='my_answers')
        each questions
            .ui.header #{text}
            .ui.action.fluid.input
                input#answer(type='text')
                #add_answer.ui.basic.button Add Your Answer
    each questions
        .ui.bottom.attached.tab.segment(data-tab='question#{_id}')
            .ui.header Collaboration for #{text}
