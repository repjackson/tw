template(name='following')
    with target_user
        .ui.segment
            .ui.header
                |You are
                if is_following
                    |following #{name}. 
                    #unfollow.ui.teal.basic.compact.right.floated.button 
                        i.cancel.icon
                        |Unfollow
                else
                    |not following #{name}. 
                    #follow.ui.teal.compact.right.floated.button 
                        i.alarm.outline.icon
                        |Follow
            .ui.hidden.divider
            .ui.two.column.grid
                .column
                    .ui.dividing.header Following #{name}
                    .ui.divided.list
                        each followers
                            +person_item
                .column
                    .ui.dividing.header Followed by #{name}
                    .ui.divided.list
                        each following
                            +person_item


