template(name='doc_id_content')
    if doc
        with doc
            if editing
                +edit_content
                .ui.form
                    .field
                        +tags
            else
                span(class=doc_classes)
                    |!{content}
                if pinnable
                    +pin_button
            if isInRole 'admin'
                unless editing
                    .edit_this.ui.basic.small.icon.button(title="parentId:#{doc_parent_id}, type:#{doc_type}")
                        i.red.pencil.icon
                        // |Edit #{tags} Content
                else
                    .save_doc.ui.green.basic.button
                        i.check.icon
                        |Save Content
    else
        if isInRole 'admin'
            .ui.header No Content Found
            .create_doc.ui.basic.button
                i.plus.icon
                |Create Content with #{doc_type}, child of #{doc_parent_id}
