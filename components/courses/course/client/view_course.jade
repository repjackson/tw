template(name='view_course')
    +nav
    .ui.container
        .ui.breadcrumb
            a.section(href='/') Home
            .divider  / 
            a.section(href='/courses') Courses
            .divider  / 
            .active.section 
                +doc_title tags='course,sol'
        .ui.hidden.divider
        .ui.stackable.grid
            .centered.row
                img.ui.image(src="{{c.url 'sol' }}")

                // h1.ui.center.aligned.header #{course.title}
            // .centered.row
            //     h4.ui.center.aligned.header #{course.subtitle}
            .five.wide.column
                .ui.vertical.fluid.pointing.large.menu
                    a.item(href="/course/sol/welcome" class="{{isActiveRoute name='course_welcome'}}") Welcome
                    a.item(href="/course/sol/modules" class="{{isActiveRoute name='course_modules'}}") Modules
                    a.item(href="/course/sol/members" class="{{isActiveRoute name='course_members'}}") Members
                    // a.item(href="/course/#{slug}/collaboration" class="{{isActiveRoute name='course_collaboration'}}") Collaboration
                    a.item(href="/course/sol/downloads" class="{{isActiveRoute name='course_downloads'}}") Downloads
                    // a.item(href="/course/#{slug}/reminders" class="{{isActiveRoute name='course_reminders'}}") Reminders
                if isInRole 'admin'
                    .ui.segment
                        .ui.dividing.header 
                            i.red.configure.icon
                            |Admin
                        .ui.header Title:
                        +doc_title tags='course,sol'
                        .ui.header Subtitle:
                        +doc_subtitle tags='course,sol'
                        // +doc_price tags='course,sol'
            .ten.wide.column
                +Template.dynamic template=course_content

    
template(name='course_reminders')                
    h2.ui.center.aligned.header Course Reminders            



template(name='register_sol')
    .ui.text.container
        h2.ui.center.aligned.header Hello and welcome to ToriWebster.com!
        h5.ui.center.aligned.header Please register an account to enroll in the SOL demo or login if you already have one.
        .ui.basic.segment
            +atForm state='signUp'