                                                    img(src="https://png.icons8.com/settings/color/24" width="24" height="24")
                                                |Account Settings
                                            a.item(href="/profile/#{currentUser.username}/email_settings" class="{{isActiveRoute name='email_settings'}}") 
                                                i.icon
                                                    img(src="https://png.icons8.com/message/color/24" width="24" height="24")
                                                |Email Settings
                                        .ui.vertical.fluid.menu
                                            a#logout.item(href="#" data-position="bottom center" data-content="Log Out")
                                                i.icon
                                                    img(src="https://png.icons8.com/burglary/color/24" width="24" height="24")
                                                |Log Out

    
                                .twelve.wide.column
