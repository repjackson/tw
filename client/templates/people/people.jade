template(name='view_people')
    .ui.stackable.padded.grid
        .centered.row
            .three.wide.column
                +parent_link
            .ten.wide.column
                h1.ui.center.aligned.header
                    +icon96 name=icon_class classes='ui inline image'
                    |#{title}
            .three.wide.column
                if can_edit
                    +edit_button
    +people_cloud
    .ui.hidden.divider
        // .twelve.wide.column
            // +doc_content tags='people cloud,blurb'
            // .ui.hidden.divider
    .ui.centered.stackable.cards
        each people
            +person
