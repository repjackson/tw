template(name='course_dashboard')
    .ui.container
        h2.ui.center.aligned.header Dashboard
        .ui.two.centered.stackable.cards
            a.ui.raised.card(href='/course/sol/welcome')
                .content
                    .center.aligned.header 
                        +icon96 name="front-gate-open" classes='ui mini inline image'
                        |Welcome
                    .description
                        .ui.list
                            .ui.basic.label 
                                |#{course_progress_doc.welcome_count}
                            |/
                            .ui.basic.label 3
                            |Completed
                            // .item Welcome Video
                            // .item Terms of Agreement
                            // .item SOL Inspiration

            if has_agreed  
                a.ui.raised.card(href='/course/sol/modules')
                    .content
                        .center.aligned.header
                            +icon96 name="questionnaire" classes='ui mini inline image'
                            |Modules
                        .description
                            .ui.basic.label #{course_progress_doc.module_complete_count}
                            |/
                            .ui.basic.label #{course_progress_doc.sol_module_count}
                            |Completed
                            .ui.list
                                .item Current Module: #{course_progress_doc.current_module}
    
                a.ui.raised.card(href='/course/sol/members')
                    .content
                        .center.aligned.header 
                            +icon96 name="people" classes='ui mini inline image'
                            |Members
                        // .description
                        //     .ui.list
                        //         .item Welcome Video
                        //         .item Terms of Agreement
                        //         .item SOL Inspiration
                if isInRole 'dev'        
                    a.ui.raised.card(href='/course/sol/stats')
                        .content
                            .center.aligned.header
                                +icon96 name="combo-chart" classes='ui mini inline image'
                                |Stats
                            // .description
                            //     .ui.list
                            //         .item Welcome Video
                            //         .item Terms of Agreement
                            //         .item SOL Inspiration
                a.ui.raised.card(href='/course/sol/pins')
                    .content
                        .center.aligned.header
                            +icon96 name="push-pin" classes='avatar' classes='ui mini inline image'
                            | Pins
                        // .description
                        //     .ui.list
                        //         .item Welcome Video
                        //         .item Terms of Agreement
                        //         .item SOL Inspiration
            else
                .ui.raised.card
                    .content
                        .ui.grey.header
                            +icon96 name="questionnaire" classes='avatar' classes='ui mini inline image'
                            |Modules
                        .description
                            .ui.list
                                .item Please agree to SOL Terms
    
                .ui.raised.card
                    .content
                        .ui.grey.header 
                            +icon96 name="people" classes='avatar' classes='ui mini inline image'
                            |Members
                        .description
                            .ui.list
                                .item Please agree to SOL Terms
                .ui.disabled.card
                    .content
                        .ui.grey.header
                            +icon96 name="combo-chart" classes='ui mini inline image'
                            |Stats
                        .description
                            .ui.list
                                .item Please agree to SOL Terms
