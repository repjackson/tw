                //     +icon48 name='handshake' classes='ui mini spaced image'
                //     | Transactions
                //     +icon48 name='rotate-left' classes='ui mini spaced image'
        .row
            .four.wide.column
                .ui.dividing.header Actions
                // a.ui.basic.fluid.button(href="/stats/send")
                //     i.send.icon
                //     |Send stats
                .ui.dividing.header Sharing
                .ui.slider.checkbox
                    input#share_stats(type='checkbox' checked=currentUser.profile.share.stats)
                    label(for='share_bookmarks') Share Stats in Profile
            .eight.wide.column
                +leaderboard
            .four.wide.column
                .ui.dividing.header Sort