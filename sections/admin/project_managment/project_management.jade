template(name='project_management')
    .ui.container
        h2.ui.center.aligned.header Project Management
        .ui.two.item.menu
            a#set_mode_to_all.item(class=all_item_class) All
            a#set_mode_to_completed.item(class=completed_item_class) Completed

        #cloud.ui.basic.segment.container
            if selected_admin_tags
                #add.ui.icon.button
                    i.plus.icon
            else
                #add.ui.basic.icon.button
                    i.plus.icon
            .ui.left.icon.large.input
                i.search.icon
                +inputAutocomplete settings=settings id="search" class="" autocomplete="off" 
            if selected_admin_tags
                #clear_tags.ui.active.icon.large.button
                    i.remove.icon
                each selected_admin_tags
                    .unselect_tag.ui.active.large.button
                        strong #{this}
            each admin_tags
                .ui.button.select_tag(class=cloud_tag_class) 
                    | #{this.name}
                    // | #{this.index}
                    small #{this.count}
            .ui.hidden.divider
            .ui.centered.cards
                each admin_docs
                    +admin_doc_view


template(name='admin_doc_view')
    .ui.card(class=project_card_class)
        .content
            .header #{title}
            .meta
                .subheader #{subtitle}
                .date
                    |by 
                    img.ui.avatar.image(src="{{c.url author.profile.image_id width=50 height=50 gravity='face' crop='fill'}}")
                    |#{author.name} #{when}
                each tags
                    .ui.tiny.button.tag(class=tag_class) #{this}
            if body
                .description Body
                |#{body}
            if content
                .description Content
                |!{content}
            if price
                | Price #{price}
            if type
                | Type: #{type}
            .ui.hidden.divider
            +mark_doc_complete_button
            if can_edit
                a.ui.basic.button(href="/admin_edit/#{_id}")
                    |Edit

template(name='admin_edit')
    with doc
        .ui.container.basic.segment
            .ui.center.aligned.header Edit Admin Doc
            .ui.form
                +tags
                +content      
            .ui.hidden.divider
            .ui.center.aligned.basic.segment
                a#save_admin_doc.ui.huge.active.button Save 
                +delete_button