template(name='child_docs')
    .ui.header
        img.ui.avatar.image(src="https://png.icons8.com/flow-chart/color/48" width="48" height="48")
        |Child Documents
    .ui.cards
        each child_docs
            .card
                .content
                    a.header(href="/view/#{_id}")
                        if number
                            |#{number}: 
                        if title
                            |#{title}
                        |(#{type})
                    .description
                        .meta
                            each tags
                                .ui.basic.label #{this}
                        |!{content}
                        |#{text}
                        |#{body}
                .content
                    +author_info
                    |#{when}
                    +edit_type