template(name='journal_doc_view')
    .ui.segment(class=journal_card_class)
        .content
            .description
                .ui.basic.segment.large
                    |!{content}
                +parent_doc_segment
        .ui.divided.grid
            .ten.wide.column
                .description
                    span.right.floated
                        if published
                            i.unlock.blue.icon
                            |Published
                        else
                            i.lock.icon
                            |Private
                    if author.profile.image_id
                        img.ui.avatar.image(src="{{c.url author.profile.image_id width=50 height=50 gravity='face' crop='fill'}}")
                    |#{author.name} #{when}
                    with author
                        +staus_indicator
                .meta
                    i.hashtag.icon
                    each tags
                        .ui.tiny.circular.compact.button.tag(class=tag_class) #{this}
                .meta
                    i.marker.icon
                    each location_tags
                        .ui.tiny.circular.compact.button.tag(class=location_tag_class) #{this}
                .meta
                    i.checkmark.box.icon
                    each intention_tags
                        .ui.tiny.circular.compact.button.tag(class=intention_tag_class) #{this}
                .extra
                    span.right.floated
                        +view_full_button
                    +bookmark_button
                    +edit_link_button
                    unless is_author
                        +thanks_button
                    if is_author
                        +published
            .six.wide.column
                .image
                    .ui.basic.segment
                        +doc_sentiment
                        +doc_emotion
