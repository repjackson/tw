template(name='view_course')
    .ui.container
        .ui.breadcrumb
            a.section(href='/') Home
            .divider  / 
            a.section(href='/courses') Courses
            .divider  / 
            .active.section #{course.title}
        .ui.hidden.divider
        .ui.grid
            .centered.row
                h1.ui.center.aligned.header #{course.title}
                h4.ui.center.aligned.header #{course.subtitle}
            .five.wide.column
                .ui.vertical.fluid.pointing.menu
                    with course
                        a.item(href="/course/view/#{_id}/modules" class="{{isActivePath '/course/view/#{_id}/modules'}}") Modules
                        a.item(href="/course/view/#{_id}/welcome" class="{{isActivePath '/course/view/#{_id}/welcome'}}") Welcome
                        a.item(href="/course/view/#{_id}/members" class="{{isActivePath '/course/view/#{_id}/members'}}") Members
                        a.item(href="/course/view/#{_id}/downloads" class="{{isActivePath '/course/view/#{_id}/downloads'}}") Downloads
                        a.item(href="/course/view/#{_id}/reminders" class="{{isActivePath '/course/view/#{_id}/reminders'}}") Reminders
                        a.item(href="/course/view/#{_id}/collaboration" class="{{isActivePath '/course/view/#{_id}/collaboration'}}") Collaboration
                .ui.segment
                    .ui.header 
                        i.red.configure.icon
                        |Admin
                    #add_module.ui.basic.fluid.button
                        // i.red.configure.icon
                        | + Module
                    #edit_course.ui.basic.fluid.button
                        | Edit Course
            .ten.wide.column
                +Template.dynamic template=course_content
                // +course_welcome

    
