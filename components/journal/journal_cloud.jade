template(name='journal_cloud')
    #cloud
        .ui.left.icon.fluid.input
            i.search.icon
            +inputAutocomplete settings=settings id="search" class="" autocomplete="off" placeholder='Search journal...'
        if selected_tags
            .ui.header Selected Tags
            #clear_tags.ui.blue.icon.button
                i.remove.icon
            each selected_tags
                .unselect_tag.ui.blue.button
                    strong #{this}
        .ui.hidden.fitted.divider
        .ui.header Filter Tags
        each journal_tags
            .ui.basic.button.select_tag(class=cloud_tag_class) 
                | #{this.name}
                // if isInRole 'admin'
                //     small #{this.count}
