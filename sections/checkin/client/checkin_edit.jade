template(name='checkin_edit')
    with doc
        .ui.container
            h1.ui.center.aligned.header Edit Check In
            .ui.stackable.grid
                .twelve.wide.column
                    .ui.form
                        +tags
                        +content
                        if watson 
                            +analyzed_watson_keywords

                .four.wide.column
                    +published
                    +request_tori_feedback
                    +call_watson
                    if watson
                        +doc_sentiment
                        +doc_emotion
                        +watson_keywords

                    .ui.divider
                    if tags
                        a.ui.fluid.green.big.button(href="/checkin/#{_id}/view")
                            i.save.icon
                            |Save
                    else
                        .ui.fluid.green.big.disabled.button Add Tags to Save
                    .ui.hidden.divider
                    #delete_doc.ui.small.fluid.red.compact.button 
                        i.trash.icon
                        |Delete
