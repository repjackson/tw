template(name='browse_checkin_view')
    .ui.segment(class=checkin_card_class)
        .content
            .description
                +view_tags
                if content
                    .ui.basic.segment
                        .large150 !{content}
                .ui.horizontal.list
                    .item
                        .large130
                            with author
                                |by 
                                if profile.image_id
                                    img.ui.avatar.image(src="{{c.url profile.image_id width=100 height=100 gravity='face' crop='fill'}}")
                                a(href="/profile/#{username}") #{name} 
                                +staus_indicator
                            |#{when}
                    .item
                        if is_author
                            +edit_link_button
                        unless is_author
                            +thanks_button
                            +resonate_button
                            +view_full_button
