template(name='doc_section')
    +nav
    .ui.container
        .ui.breadcrumb
            a.section(href='/') Home
            .divider  / 
            a.section(href='/courses') Courses
            .divider  / 
            a.section(href="/course/sol") Source of Light
            .divider  / 
            a.section(href="/course/sol/modules") Modules
            .divider  / 
            a.section(href="/course/sol/#{module.number}") #{module.number}: #{module.title}
            .divider  / 
            a.section(href="/course/sol/#{module.number}/sections") Sections
            .divider  / 
            .section #{section.number}: #{section.title}

        h2.ui.header 
            |Section #{section.number}: #{section.title}
        .ui.stackable.grid
            .five.wide.column
                .ui.vertical.fluid.pointing.menu
                    a.item(href="/course/sol/module/#{module.number}/section/#{section.number}" class="{{isActiveRoute name='doc_section'}}") View
                    // a.item(href="/course/sol/module/#{module.number}/section/#{section.number}/reflective_questions" class="{{isActiveRoute name='section_reflective_questions'}}") Collaboration
                .ui.dividing.header Progress
                if video_complete
                    .ui.teal.fluid.label 
                        i.check.icon
                        |Video
                else
                    .ui.teal.basic.fluid.label 
                        |Video
                if reflective_questions_answered
                    .ui.teal.fluid.label 
                        i.check.icon
                        |Reflective Questions
                else
                    .ui.teal.basic.fluid.label 
                        |Reflective Questions
            .eleven.wide.column
                // .ui.basic.segment
                +doc_content tags=section_content_tags
                .ui.hidden.divider
                .ui.styled.fluid.accordion
                    h3.title
                        i.large.newspaper.icon
                        | Transcript
                    .content
                        +doc_content tags=section_transcript_tags
                .ui.hidden.divider
                if video_complete
                    .unmark_video_complete.ui.teal.fluid.button 
                        i.check.icon
                        |Video Watched
                else
                    .mark_video_complete.ui.basic.fluid.button Mark Video Watched
                .ui.hidden.divider
                if video_complete
                    +section_reflective_questions
                        


