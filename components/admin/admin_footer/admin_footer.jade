template(name='admin_footer')
    .ui.horizontal.divider.header Admin Footer
    #admin_footer_cloud.ui.basic.center.aligned.segment.container
        .ui.left.icon.large.input
            i.search.icon
            +inputAutocomplete settings=settings id="search" class="" autocomplete="off" 

        if selected_tags
            #clear_tags.ui.teal.icon.large.circular.button
                i.remove.icon
            each selected_tags
                .unselect_tag.ui.teal.large.circular.button
                    strong #{this}
        .ui.hidden.divider
        if selected_authors
            #clear_authors.ui.teal.icon.large.circular.button
                i.remove.icon
            each selected_authors
                .unselect_autho.ui.teal.large.circular.button
                    strong #{this}
        .ui.hidden.divider
    .ui.two.centered.cards
        each docs
            +admin_doc

template(name='admin_doc')
    .ui.card
        .content
            img.ui.avatar.image(src="{{c.url author.profile.image_id width=50 height=50 gravity='face' crop='fill'}}")
            .select_author.ui.basic.button #{author.username} 
            .meta Author Id: #{author._id}
            .meta Doc Id: #{_id}
            .meta #{when}
            .description
                if title
                    |Title: #{title}
                if body
                    // |#{body}
                    +edit_body_field
            .meta
                if number
                    |Number: #{number}
            each tags
                .ui.tiny.button.tag(class=tag_class) #{this}
        if parent_id
            .content
                +edit_parentid_field
                div
                    |#{parent.body}
                    each parent.tags
                        .ui.label #{this}
        .ui.hidden.divider
        a.ui.basic.button(href="/edit/#{_id}")
            i.red.configure.icon
            |Edit
            