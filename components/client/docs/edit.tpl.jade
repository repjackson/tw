with doc
    .ui.container.basic.segment
        .ui.center.aligned.header 
            if title
                |Edit '#{title}' #{type}
            else 
                |Edit #{type}
        .ui.form
            +title
            +subtitle
            +slug
            .ui.basic.segment
                +tags
            +number
            +image
            +price
            .ui.header edit_body_field
            +edit_body_field
            +content      
            .ui.hidden.divider
            +published
            .ui.hidden.divider
            if isInRole 'admin'
                +type
                .ui.hidden.divider
        .ui.center.aligned.basic.segment
            a.ui.huge.teal.button(href="/view/#{_id}") Save #{title} #{type}
            +delete_button