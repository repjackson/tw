template(name='lightbank')
    .ui.container
        +cloud
        each docs
            +doc_view
        


template(name='doc_view')
    .ui.container.fluid.segment
        |!{content}
        .meta
            i.tags.icon
            each tags
                .ui.circular.tiny.button.tag(class=tag_class) #{this}
        .ui.hidden.divider
        +favorite_button
        a.ui.blue.basic.button(href="/view/#{_id}") 
            |View
            i.right.chevron.icon
        if can_edit
            a.ui.circular.basic.large.button(href="/edit/#{_id}")
                i.red.configure.icon
                |Edit
