    .ui.hidden.divider
    .ui.hidden.divider
    .ui.hidden.divider
    .six.wide.column
        h1.ui.header Let's Connect!
        .ui.large.form
            .required.field
                label Name
                input#name(type='text')
            .field
                label Email
                input#email(type='email')
            .field
                label Message
                textarea#message(rows='4')
            .field
                #send_contact_submission.ui.big.teal.button
                    .uppercase Send
    .six.wide.column
        img.ui.centered.image(src="{{c.url 'madbomber' }}")
        h1.ui.center.aligned.header
            |Want to receive weekly wisdom?
        .ui.form
            .field
                label Email
                input#newsletter_email(type='text')
        #newsletter_signup.ui.teal.large.button
            .uppercase Yes, please send me the light!