template(name='view_course')
    with course
        .ui.container
        if in_course
            +course_page
        else 
            +buy_course
    
template(name='buy_course')
    with course
        .ui.text.container
            img.ui.centered.image(src="{{c.url image_id }}")
            h1.ui.center.aigned.header #{title}
            h3.ui.center.aigned.header #{subtitle}
            span !{description}
            .ui.centered.grid
                .six.wide.column
                    a.ui.teal.large.button(href='http://toriwebster.us11.list-manage.com/subscribe?u=8973e01aca6da499e7e1a63bd&id=9204d04e30')
                        |Sign Up for the SOL Newsletter
                .six.wide.column
                    if currentUser
                        a.buy_course.ui.teal.big.button
                            |Enroll
                    else
                        a.buy_course.ui.teal.big.button
                            |Login and Enroll
            if isInRole 'admin'
                a.ui.basic.large.button(href="/course/edit/#{_id}") 
                    i.red.configure.icon
                    |Edit






    
template(name='course_page')
    h1.ui.center.aligned.header #{title}
    .ui.divided.stackable.grid
        .ten.wide.column
            .description
                |!{description}
            .ui.segment
                .ui.header Transcript
            .ui.segment
                .ui.header Reflection
            .ui.segment
                .ui.header Collaboration
                +collaboration
            .ui.segment
                .ui.header Light Work

        .five.wide.column
            // .ui.horizontal.divider.header Status
            .ui.header course Number: #{course_number}
            .ui.horizontal.divider.header Status
            if complete
                .ui.teal.big.fluid.label 
                    i.check.icon
                    |Complete
            else
                .ui.teal.big.basic.fluid.label 
                    |Incomplete
            if complete
                #mark_as_incomplete.ui.basic.fluid.button Mark Incomplete
            else
                #mark_as_complete.ui.basic.fluid.button Mark Complete
            .ui.horizontal.divider.header Admin
            a.ui.fluid.basic.button(href="/edit_course/#{_id}")
                i.red.configure.icon
                |Edit