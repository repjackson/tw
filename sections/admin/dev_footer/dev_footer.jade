template(name='dev_footer')
    .ui.horizontal.divider.header dev Footer
    #dev_footer_cloud.ui.basic.center.aligned.segment.container
        .ui.left.icon.large.input
            i.search.icon
            +inputAutocomplete settings=settings id="search" class="" autocomplete="off" 

        if selected_tags
            #clear_tags.ui.teal.icon.large.circular.button
                i.remove.icon
            each selected_tags
                .unselect_tag.ui.teal.large.circular.button
                    strong #{this}
        .ui.hidden.divider
        if selected_authors
            #clear_authors.ui.teal.icon.large.circular.button
                i.remove.icon
            each selected_authors
                .unselect_autho.ui.teal.large.circular.button
                    strong #{this}
        .ui.hidden.divider
    .ui.two.centered.cards
        each docs
            +dev_doc

template(name='dev_doc')
    .ui.card
        .content
            img.ui.avatar.image(src="{{c.url author.profile.image_id width=50 height=50 gravity='face' crop='fill'}}")
            .select_author.ui.basic.button #{author.username} 
            .ui.list
                .item 
                    .header Author Id
                    |#{author._id}
                .item 
                    .header Doc Id:
                    |#{_id}
                .item
                    .header Created
                    |#{when}
                if title
                    .item
                        .header Title: 
                        |#{title}
                if subtitle
                    .item
                        .header Subtitle
                        |#{subtitle}
                if body
                    .item
                        +edit_body_field
                if number
                    .item
                        .header Number
                        |#{number}
                if slug
                    .item
                        .header Slug
                        |#{slug}
                if price
                    .item
                        .header Price
                        |#{price}
                if typpe
                    .item
                        .header Type
                        |#{type}
            each tags
                .ui.tiny.button.tag(class=tag_class) #{this}
        if parent_id
            .content
                +edit_parentid_field
                div
                    |#{parent.body}
                    each parent.tags
                        .ui.label #{this}
        .ui.hidden.divider
        a.ui.basic.button(href="/edit/#{_id}")
            i.red.configure.icon
            |Edit
            