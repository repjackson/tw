template(name='person_tags')
    .ui.segment
        .ui.dividing.header
            i.large.icons
                i.user.icon
                i.tags.corner.icon
            | Person Tags
        .ui.sub.header Only #{person.name} can see your tags.
        if is_person
            each person_tags
                .ui.basic.label #{this}
            .ui.list
                each person_tag_ratings
                    .item
                        img.ui.avatar.image(src="{{c.url author.profile.image_id width=50 height=50 gravity='face' crop='fill'}}")
                        .content
                            a.header(href="/account/profile/#{author._id}")
                                if profile.name 
                                    |#{author.profile.name}
                                else
                                    |#{author.username}
                            .description
                                each tags
                                    .ui.small.basic.label #{this}
        if currentUser
            if my_rating
                .ui.dividing.header My Tags
                with my_rating
                    unless is_editing
                        each tags
                            .ui.small.basic.label #{this}
                        +session_edit_button
                        +delete_button
                    else
                        .ui.form
                            +tags
                            +session_edit_button
            else
                #add_person_tags.ui.basic.button
                    i.plus.icon
                    |Add Tags