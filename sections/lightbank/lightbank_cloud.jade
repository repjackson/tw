template(name='lightbank_cloud')
    #cloud.ui.basic.segment
        // .ui.hidden.divider
        // .ui.circular.button.select_tag(class=media_tag_class) Tori Webster
        // .ui.hidden.divider
        if media_tags_exist
            .ui.center.aligned.header
                +icon48 name='responsive' classes='ui avatar image'
                |Filter Media
            each media_tags
                .ui.circular.button.select_tag(class=media_tag_class) 
                    strong #{this.name}
                    // if isInRole 'admin'
                    //     small #{this.count}
        .ui.hidden.fitted.divider
        .ui.center.aligned.header 
            +icon48 name='hashtag' classes='ui avatar image'
            |Browse Tags
        .ui.left.icon.input
            i.search.icon
            +inputAutocomplete settings=settings id="search" class="" autocomplete="off" placeholder='Search...'
        if selected_theme_tags
            // .ui.dividing.header Selected Tags
            #clear_tags.ui.blue.icon.circular.button
                i.remove.icon
            each selected_theme_tags
                .unselect_tag.ui.blue.circular.button
                    strong #{this}

        each theme_tags
            .ui.basic.circular.button.select_tag(class=cloud_tag_class) 
                strong #{this.name}
                // if isInRole 'admin'
                //     small #{this.count}
