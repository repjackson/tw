template(name='left_sidebar')
    .ui.left.inline.vertical.thin.sidebar.fixed.menu
        a.toggle_sidebar.item
            // i.home.icon
            img(src='/android-chrome-192x192.png' style="width:50px;height:50px;")
            // |       Home
        a.toggle_sidebar.item(href='/about' class="{{isActivePath '/about'}}") 
            i.info.icon
            |About
        a.toggle_sidebar.item(href='/courses' class="{{isActivePath '/courses'}}")
            i.university.icon
            | Courses
        a.toggle_sidebar.item(href='/people' class="{{isActivePath '/people'}}")
            i.smile.icon
            | People
        a.toggle_sidebar.item(href='/lightbank' class="{{isActivePath '/lightbank'}}")
            i.sun.icon
            | Lightbank
        a.toggle_sidebar.item(href='/contact' class="{{isActivePath '/contact'}}") 
            i.call.icon
            |Contact
        if currentUser
            if isInRole 'admin'
                a.toggle_sidebar.item(href='/admin/members' class="{{isActivePath '/admin/members'}}")
                    i.configure.icon
                    | Admin
            a.toggle_sidebar.item(href="/dashboard" class="{{isActivePath '/dashboard'}}")
                if currentUser.profile.image_id
                    img.ui.avatar.image(src="{{c.url currentUser.profile.image_id width=50 height=50 gravity='face' crop='fill'}}")
                else
                    i.user.icon
                if currentUser.name
                    | #{currentUser.name}
                else
                    | #{currentUser.username}
            a#logout.ui.item(href='#')
                i.sign.out.icon
                | Sign Out
        else
            a.ui.item(href='/sign-in') 
                i.sign.in.icon
                | Sign In


