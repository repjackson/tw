template(name='course_stats')
    .ui.container
        h1.ui.center.aligned.header 
            +icon96 name='combo-chart'
            | My SOL Stats
        .ui.divided.items
            each modules
                +module_stats
            
template(name='module_stats')
    .item
        .content
            .header
                |Module #{number}
                // |hi
            .meta
                each tags
                    .ui.label(class=tag_class) #{this}
            // .avatar
                // a
                //     | by
                //     img.ui.avatar.image(src="{{c.url author.profile.image_id width=50 height=50 gravity='face' crop='fill'}}")
                //     |#{author.name}
                // span.date #{from_now}
            .description
                .ui.basic.segment
                    .ui.list
                        .item
                            |module_progress_percent: #{module_progress_doc.module_progress_percent}
                        .item
                            |module_section_count: #{module_progress_doc.module_section_count}
                        .item
                            |section_complete_count: #{module_progress_doc.section_complete_count}
                        .item
                            |module_sections_complete: #{module_progress_doc.module_sections_complete}
                        .item
                            |debrief_question_count: #{module_progress_doc.debrief_question_count}
                        .item
                            |debrief_answer_count: #{module_progress_doc.debrief_answer_count}
                        .item
                            |module_debrief_complete: #{module_progress_doc.module_debrief_complete}
                        .item
                            |lightwork_question_count: #{module_progress_doc.lightwork_question_count}
                        .item
                            |lightwork_answer_count: #{module_progress_doc.lightwork_answer_count}
                        .item
                            |module_lightwork_complete: #{module_progress_doc.module_lightwork_complete}

            .extra
                .ui.divided.list
                    .item
                        each section_docs
                            |#{body}
                            each tags
                                .ui.label #{this}