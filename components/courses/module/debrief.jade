template(name='debrief')
    .ui.horizontal.divider.header Lightwork Debrief Questions
    if isInRole 'admin'
        #add_debrief_question.ui.basic.button 
            i.red.configure.icon
            |Add Debrief Question
    each debrief_questions
        .ui.segment(class=segment_class)
            if is_editing
                .ui.form
                    .field
                        +number
                    .field
                        label Debrief Question
                        textarea#body(rows='3') #{body}
                .ui.divider
                +session_edit_button
                +published
                +delete_button
        
            else
                .ui.header #{number}: #{body}
                if isInRole 'admin'
                    +session_edit_button

            .ui.divider
            if currentUser
                if has_answered_question
                    +debrief_answers
                else
                    .add_debrief_answer.ui.basic.button 
                        i.plus.icon
                        |Add Answer

template(name='debrief_answers')
    with my_answer
        .ui.segment(class=segment_class)
            .ui.blue.ribbon.label(class=ribbon_class)
                |Your Answer
                if published
                    |(public)
                else
                    |(private)
            if is_editing
                .ui.basic.segment
                    .ui.form
                        .field
                            // label Answer
                            textarea#body(rows='3') #{body}
                    +session_edit_button
                    +published
                    +delete_button
            else
                h4 #{body}
                if can_edit
                    +session_edit_button
    .ui.styled.fluid.accordion
        .title
            i.dropdown.icon
            | All Public Answers
        .content
            .ui.threaded.comments
                each all_answers
                    .comment
                        a(href='/profile/#{author.username}').avatar
                            img.ui.avatar.image(src="{{c.url author.profile.image_id width=100 height=100 gravity='face' crop='fill'}}")
                        .content
                            a(href='/profile/#{author.username}').author #{author.name}
                            .metadata
                                span.date #{from_now}
                                unless is_author
                                    +voting
                            .text
                                | #{body}
