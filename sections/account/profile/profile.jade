                                                    img(src="https://png.icons8.com/hand-with-pen/color/24" width="24" height="24")
                                                |Quizes
                                            a.item(href="/profile/#{username}/social" class="{{isActiveRoute name='profile_social'}}") 
                                                i.icon
                                                    img(src="https://png.icons8.com/chat/color/24" width="24" height="24" )
                                                |Social
                                            a.item(href="/profile/#{username}/journal" class="{{isActiveRoute name='profile_journal'}}") 
                                                i.icon
                                                    img(src="https://png.icons8.com/journal/color/24" width="24" height="24")
                                                | Journal
                                            if isInRole 'admin'
                                                a.item(href="/profile/#{username}/badges" class="{{isActiveRoute name='profile_badges'}}") 
