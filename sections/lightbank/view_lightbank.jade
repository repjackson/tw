
template(name='view_lightbank')
    h1.ui.header
        a.ui.basic.button(href='/lightbank')
            +icon48 name='double-left' classes='ui avatar image'
            |Lightbank
        .center.aligned.header View Lightbank Entry
    .ui.container
        .ui.stackable.grid
            .ten.wide.column
                if has_youtube
                    if youtube
                        +view_youtube
                if has_image
                    if image_id
                        .ui.large.image
                            img(src="{{c.url image_id width=500 crop='fit'}}")
                    if image_url
                        .ui.fluid.image
                            img(src=image_url)
                if has_content
                    .large
                        |!{content}
                // if journal_prompt
                +journal_responses
                // +comments    
                // +tag_rating
                if watson
                    +analyzed_watson_keywords
                // +child_docs
            .six.wide.column
                .ui.dividing.header 
                    +icon48 name='sports-mode'
                    |Actions
                +bookmark_button
                +thanks_button
                // +reflect_button
                if isInRole 'admin'
                    +call_watson
                .ui.dividing.header 
                    +icon48 name='hashtag'
                    |Tags
                each tags
                    .ui.basic.large.label.doc_tag #{this}
                if watson
                    +doc_sentiment
                    +doc_emotion
                    +watson_keywords
    
                .ui.dividing.header Resonates
                +resonate_button
                +resonates_list 
                if isInRole 'admin'
                    .ui.dividing.header 
                        +icon48 name='monarch' classes='ui avatar image'
                        |Admin
                    if published
                        .ui.basic.green.label Published
                    else
                        .ui.basic.label Unpublished
                    .ui.hidden.fitted.divider
                    .ui.header added by #{author.name} #{when}
                +edit_link_button

