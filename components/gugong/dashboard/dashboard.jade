template(name='member_dashboard')
    .ui.container
        .ui.center.aligned.header #{currentUser.username}'s Dashboard
        .ui.stackable.grid
            .four.wide.column
                +me_card
                +my_courses
            .eight.wide.column
                +feed
            .four.wide.column
                +friends_card
                
                
template(name='friends_card')
    .ui.segment
        .ui.center.aligned.header Friends
        .ui.list
            each my_friends
                .item
                    img.ui.avatar.image(src="{{c.url profile.image_id width=50 height=50 gravity='face' crop='fill'}}")
                    .content
                        a.header(href="/profile/#{_id}")
                            if profile.first_name 
                                |#{profile.first_name} #{profile.last_name}
                            else
                                |#{username}
                        .description
                            each five_tags
                                .ui.small.basic.label #{this}
                        .description
                            +userPill
                            |last login: #{last_login}
                                
                        
