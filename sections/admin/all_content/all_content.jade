template(name='all_content')
    .ui.container
        h2.ui.center.aligned.header All Content
        #cloud.ui.basic.segment.container
            .ui.left.icon.large.input
                i.search.icon
                +inputAutocomplete settings=settings id="search" class="" autocomplete="off" 
            if selected_all_tags
                #clear_tags.ui.active.icon.large.button
                    i.remove.icon
                each selected_all_tags
                    .unselect_tag.ui.active.large.button
                        strong #{this}
            each all_tags
                .ui.button.select_tag(class=cloud_tag_class) 
                    | #{this.name}
                    // | #{this.index}
                    small #{this.count}
            .ui.hidden.divider
            .ui.centered.cards
                each all_docs
                    // +all_doc_view
                    +dev_doc

template(name='all_doc_view')
    .ui.card(class=project_card_class)
        .content
            .header #{title}
            .meta
                .subheader #{subtitle}
                .date
                    |by 
                    img.ui.avatar.image(src="{{c.url author.profile.image_id width=50 height=50 gravity='face' crop='fill'}}")
                    |#{author.name} #{when}
                each tags
                    .ui.tiny.button.tag(class=tag_class) #{this}
            if body
                .description Body
                |#{body}
            if content
                .description Content
                |!{content}
            if price
                | Price #{price}
            if type
                | Type: #{type}
            .ui.hidden.divider