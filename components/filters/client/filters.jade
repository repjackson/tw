
template(name='theme_tag_filter')
    .ui.dividing.header 
        img(src="https://png.icons8.com/hashtag/color/48" width="48" height="48")
        |Browse Themes
    .ui.left.icon.small.input
        i.search.icon
        +inputAutocomplete settings=settings id="search" class="" autocomplete="off" placeholder='Search...'
    if selected_theme_tags
        #clear_theme_tags.ui.teal.icon.circular.button
            i.remove.icon
        each selected_theme_tags
            .unselect_theme_tag.ui.teal.circular.button
                strong #{this}
    each theme_tags
        .ui.basic.circular.button.select_theme_tag(class=theme_tag_class) 
            | #{this.name}
            // if isInRole 'admin'
            //     small #{this.count}

